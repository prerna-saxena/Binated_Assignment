            text-align: center;
            background-color: #f4f4f4;
            transition: background-color 0.5s ease;
        }
        .container {
            margin-top: 100px;
        }
        button {
            font-size: 20px;
            padding: 15px 25px;
            cursor: pointer;
            border: none;
            border-radius: 10px;
            background-color: #ff4081;
            color: white;
            transition: transform 0.2s ease, background-color 0.3s ease;
        }
        button:hover {
            background-color: #e91e63;
            transform: scale(1.1);
